@page
@model BulkyWebRazor_Temp.Pages.Catagories.CreateModel

<form asp-page="/catagories/create" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Catagory</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Catagory.Name" class="p-0"></label>
            <input asp-for="Catagory.Name" class="form-control" />
            <span asp-validation-for="Catagory.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Catagory.DisplayOrder" class="p-0"></label>
            <input asp-for="Catagory.DisplayOrder" class="form-control" />
            <span asp-validation-for="Catagory.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">CREATE</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/catagories/index" class="btn btn-outline-secondary border form-control">BACK TO LIST</a>
            </div>
        </div>
    </div>
</form>

            @section Scripts{
            <partial name="_ValidationScriptsPartial"/>
            }
