@page
@using BulkyWebRazor_Temp.Models
@model BulkyWebRazor_Temp.Pages.Catagories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Catagory List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/catagories/create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Catagory</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Catagory Name</th>
                <th>Display Order</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Catagory catagory in Model.CatagoryList!.OrderBy(o => o.DisplayOrder))
            {
                <tr>
                    <td>@catagory.Name</td>
                    <td>@catagory.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/catagories/edit" asp-route-id="@catagory.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>EDIT</a>
                            <a asp-page="/catagories/delete" asp-route-id="@catagory.Id" class=" btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>DELETE</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
